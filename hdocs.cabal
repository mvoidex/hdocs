name:                hdocs
version:             0.4.0.0
synopsis:            Haskell docs tool
description:
  Tool and library to get docs for installed packages and source files.
  Can return result in JSON format.
  Can dump docs for all installed modules
  .
  @Usage:
  hdocs <module> - get docs for module/file
  hdocs <module> <name> - get docs for name in module/file
  hdocs dump [r] - dump all installed docs, if [r], find docs for reexported declarations

  flags
  --pretty       pretty JSON output
  -g GHC_OPT  --ghc=GHC_OPT  option to pass to GHC
  @
homepage:            https://github.com/mvoidex/hdocs
license:             BSD3
license-file:        LICENSE
author:              Alexandr `Voidex` Ruchkin
maintainer:          voidex@live.com
category:            Development
build-type:          Simple
cabal-version:       >=1.8

library
  hs-source-dirs: src
  exposed-modules:
    HDocs.Base
    HDocs.Haddock
    HDocs.Module
  build-depends:
    base == 4.7.*,
    aeson == 0.7.*,
    bytestring == 0.10.*,
    filepath == 1.3.*,
    ghc == 7.8.*,
    ghc-paths == 0.1.*,
    haddock == 2.14.*,
    containers == 0.5.*,
    transformers == 0.3.*,
    MonadCatchIO-transformers == 0.3.*,
    network == 2.4.*,
    process == 1.2.*,
    text == 1.1.*,
    mtl == 2.1.*

executable hdocs
  main-is: hdocs.hs
  hs-source-dirs: tools
  build-depends:
    base == 4.7.*,
    hdocs,
    aeson == 0.7.*,
    aeson-pretty == 0.7.*,
    bytestring == 0.10.*,
    containers == 0.5.*,
    filepath == 1.3.*,
    mtl == 2.1.*,
    network == 2.4.*,
    text == 1.1.*

test-suite test
  type: exitcode-stdio-1.0
  main-is: Test.hs
  hs-source-dirs: tests
  build-depends:
    base == 4.7.*,
    hdocs,
    containers == 0.5.*,
    mtl == 2.1.*
